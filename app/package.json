{
  "name": "jsstack",
  "version": "0.0.1",
  "scripts": {
    "start": "node ./bin/www",
    "postinstall": "npm run browserify && npm run sass",
    "build:js": "browserify _/js/app.js -o dist/js/app.bundle.js -t [ babelify --presets [ es2015 ] ]",
    "build:sass": "node-sass _/scss/main.scss | postcss --use autoprefixer --autoprefixer.browsers \"> 5%\" -o dist/css/main.min.css",
    "dev:sass": "node-sass _/scss/main.scss | postcss --use autoprefixer --autoprefixer.browsers \"> 5%\" -o src/css/main.min.css",
    "watch:sync": "browser-sync start --ws --proxy http://localhost:9000 --reload-delay 1000 --files \"src/**/*.*\" ",
    "watch:js": "watchify -d _/js/app.js -o src/js/app.bundle.js -t [ babelify --presets [ es2015 ] ]",
    "watch:server": "nodemon -L -q -e js --watch _/express --watch bin",
    "watch:sass": "nodemon -L -q -C -e scss -w _/scss -x \"npm run dev:sass\"",
    "clean": "rm -rf dist",
    "mkdir": "mkdir -p dist/css && mkdir -p dist/js",
    "prebuild": "npm run clean && npm run mkdir",
    "build": "cp src/index.html dist/ && npm-run-all -p build:*",
    "watch": "npm-run-all -p --silent watch:*"
  },
  "dependencies": {
    "body-parser": "~1.13.2",
    "compression": "^1.6.0",
    "cookie-parser": "~1.3.5",
    "debug": "~2.2.0",
    "express": "~4.13.1",
    "helmet": "^1.0.1",
    "morgan": "~1.6.1",
    "serve-favicon": "~2.3.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.1",
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "browser-sync": "^2.11.1",
    "browserify": "^13.0.0",
    "node-sass": "^3.4.2",
    "nodemon": "^1.8.1",
    "npm-run-all": "^1.5.1",
    "postcss-cli": "^2.5.0",
    "watchify": "^3.7.0"
  }
}
