{
  "name": "jsstack",
  "version": "0.0.1",
  "scripts": {
    "start": "node ./bin/www",
    "postinstall": "npm-run-all -p dev:*",
    "build:js": "browserify _/js/app.js -o dist/js/app.bundle.js -t [ babelify --presets [ es2015 ] ]",
    "build:css": "node-sass _/scss/main.scss | postcss --use autoprefixer --autoprefixer.browsers \"> 5%\" -o dist/css/main.min.css",
    "build:img": "imagemin  src/img/* dist/img/",
    "dev:sass": "node-sass _/scss/main.scss | postcss --use autoprefixer --autoprefixer.browsers \"> 5%\" -o src/css/main.min.css",
    "watch:server": "nodemon -L -e js --watch _/express --watch bin",
    "watch:js": "watchify --poll -d _/js/app.js -o src/js/app.bundle.js -t [ babelify --presets [ es2015 ] ] -v",
    "watch:sass": "nodemon -L -q -C -e scss -w _/scss -x \"echo '=> SCSS file changed' && npm run dev:sass\"",
    "watch:sync": "browser-sync start --ws --proxy http://localhost:9000 --reload-delay 100 --files 'src/**/*.*'",
    "reload": "curl http://localhost:3000/__browser_sync__?method=reload",
    "clean": "rm -rf dist/*",
    "prebuild": "npm run clean",
    "build": "cp -R src/* dist/ && npm-run-all -p build:*",
    "watch": "npm-run-all -p --silent watch:*",
    "nodemon": "nodemon",
    "imagemin": "imagemin -o 7 src/img/*  dist/img/"
  },
  "dependencies": {
    "body-parser": "~1.13.2",
    "compression": "^1.6.0",
    "cookie-parser": "~1.3.5",
    "debug": "~2.2.0",
    "express": "~4.13.1",
    "helmet": "^1.0.1",
    "morgan": "~1.6.1",
    "serve-favicon": "~2.3.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.1",
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "browser-sync": "^2.11.1",
    "browserify": "^13.0.0",
    "imagemin-cli": "^2.1.0",
    "node-sass": "^3.4.2",
    "nodemon": "^1.8.1",
    "npm-run-all": "^1.5.1",
    "postcss-cli": "^2.5.0",
    "watchify": "^3.7.0"
  }
}